<div>
  <div>
    <h1>
      List of users
    </h1>
  </div>
</div>

<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>

        <th>
          Private?
        </th>

        <th>
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_users.each do |user| %>
      <tr>
        <td>
          <%= user.username %>
        </td>

        <td>
        <% if user.private == true %>
          Yes
        <% else %>
          No
        <% end %>
        </td>

        <td>
          
        </td>

        <td>
        <a href="/users/<%= user.username %>">Show details</a>
        </td>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>
